<?xml version="1.0" ?>
<launch>
  
  <arg name="cmd_vel_topic" default="cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find robotont_navigation)/dwa_planner/costmap_common_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find robotont_navigation)/dwa_planner/costmap_common_params.yaml" command="load" ns="global_costmap"/>

    <rosparam file="$(find robotont_navigation)/dwa_planner/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find robotont_navigation)/dwa_planner/global_costmap_params.yaml" command="load" />

    <rosparam file="$(find robotont_navigation)/dwa_planner/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find robotont_navigation)/dwa_planner/move_base_params.yaml" command="load" />
    
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>
  
</launch>
